{
  "name": "nuxt-boilerplate",
  "version": "1.0.0",
  "description": " nuxt-boilerplate",
  "author": "Alexsey Vishnyakov <pms146@yandex.ru>",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:css": "stylelint --config ./.stylelintrc \"src/**/**/*.{vue,scss}\"",
    "lint:css:fix": "stylelint --fix --config ./.stylelintrc \"src/**/*.{vue,scss}\" ",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:js:fix": "eslint --ext .js,.vue --fix --ignore-path .gitignore .",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^4.19.1",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^4.0.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0"
  }
}
